{
  "name": "@vcom/starter",
  "version": "0.0.0",
  "description": "Vue Component Starter",
  "main": "./dist/vcom-starter.umd.js",
  "module": "./dist/vcom-starter.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "pnpm run --filter=example dev",
    "build": "pnpm run --filter=core build && esno ./scripts/gen-type.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "changelog": "conventional-changelog -p custom-config -i CHANGELOG.md -s -n ./changelog.options.js && git add CHANGELOG.md",
    "prepare": "husky install",
    "commit": "git-cz",
    "release": "release-it"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "Vue3",
    "Component",
    "Starter"
  ],
  "author": "flingyp",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@flypeng/eslint-config": "^0.0.6",
    "commitizen": "^4.2.6",
    "compare-func": "^2.0.0",
    "conventional-changelog": "^3.1.25",
    "conventional-changelog-cli": "^2.2.2",
    "conventional-changelog-custom-config": "^0.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.31.0",
    "esno": "^0.16.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "local-pkg": "^0.4.3",
    "release-it": "^15.6.0",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "{core,example}/**/*.{js,jsx,ts,tsx,vue}": [
      "pnpm run lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release-it": {
    "github": {
      "release": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flingyp"
  }
}
